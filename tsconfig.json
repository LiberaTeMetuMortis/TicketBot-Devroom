{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false                                
  }
}
